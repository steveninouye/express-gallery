{{> header}}
<div class='ui container grid'>


    <div class="eleven wide column ">
        <div class='sixteen wide column'>
            <img class='ui fluid image ' src="{{selectedPicture.url}}"> @{{getUsername selectedPicture.email}} -
            <a href="{{selectedPicture.url}}">{{shortenURL selectedPicture.url}}</a>
            <br>
            <br> {{selectedPicture.description}}
            <br>
            <hr>
            <br>
            <a href="/gallery/{{selectedPicture.picture_id}}/edit">Edit Picture</a>
        </div>
    </div>


    <div class="five wide column" id="sampleImages">
        {{#each randomAllPictures}}
        <a href="/gallery/{{this.picture_id}}">
            <img src='{{this.url}}'>
        </a>
        {{this.description}}
        <br>
        <hr>{{/each}}
    </div>


</div>
{{> footer}}